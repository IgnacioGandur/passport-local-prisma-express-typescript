{
  "name": "passport-local-prisma-express-typescript",
  "version": "1.0.0",
  "description": "A boilerplate for an Express + Passport Js with local strategy + Prisma ORM + Typescript so you don't have to deal again with the pain in the ass of setting up Passport.",
  "main": "index.js",
  "scripts": {
    "dev": "tsx --watch --env-file .env src/app.ts",
    "start": "node --env-file .env dist/server.js",
    "build": "tsc",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/IgnacioGandur/passport-local-prisma-express-typescript.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "bugs": {
    "url": "https://github.com/IgnacioGandur/passport-local-prisma-express-typescript/issues"
  },
  "homepage": "https://github.com/IgnacioGandur/passport-local-prisma-express-typescript#readme",
  "dependencies": {
    "express": "^5.1.0"
  },
  "devDependencies": {
    "@tsconfig/node22": "^22.0.2",
    "@types/express": "^5.0.3",
    "@types/node": "^24.3.0",
    "prettier": "^3.6.2",
    "prisma": "^6.14.0",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2"
  }
}
