  "dependencies": {
    "@prisma/client": "^6.14.0",
    "@quixo3/prisma-session-store": "^3.1.13",
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/express-session": "^1.18.2",
    "@types/passport": "^1.0.17",
