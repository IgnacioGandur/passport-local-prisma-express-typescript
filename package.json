  "main": "index.js",
  "scripts": {
    "dev": "NODE_ENV=development tsx --watch --env-file .env src/server.ts",
    "start": "NODE_ENV=production node --env-file .env dist/server.js",
    "build": "tsc",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/IgnacioGandur/passport-local-prisma-express-typescript.git"
  },
  "keywords": [],
